<section class="Section {% unless section.settings.image %}Section--spacingNormal{% endunless %}">
    {%- capture section_content -%}
      <div class="FeatureText__ContentWrapper">
        <div class="FeatureText__Content">
          {%- if section.settings.subheading != blank or section.settings.title != blank -%}
            <header class="SectionHeader">
              {%- if section.settings.subheading != blank -%}
                <h3 class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.subheading | escape }}</h3>
              {%- endif -%}
  
              {%- if section.settings.title != blank -%}
                <h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.title | escape }}</h2>
              {%- endif -%}
  
              {%- if section.settings.content != blank -%}
                
                  {{ section.settings.content }}
                                  <div class="ButtonGroup ButtonGroup--spacingSmall "><a href="https://anteage.com/products/anteage-skin-fitness-kit-1?_pos=1&_sid=3ef7363d6&_ss=r" id="fitness-btn" class="ButtonGroup__Item Button" >Learn More</a></div>

                
              {%- endif -%}
  
              {%- if section.settings.link_text != blank -%}
                <a href="{{ section.settings.link_url }}" class="Link Link--underline">{{ section.settings.link_text | escape }}</a>
              {%- endif -%}
            </header>
          {%- endif -%}
        </div>
      </div>
    {%- endcapture -%}
  
    {%- capture section_image -%}
      {%- if section.settings.image != blank -%}
        <div class="FeatureText__ImageWrapper">
          {%- capture supported_sizes -%}{%- render 'image-size', sizes: '400,600,700,800,900,1000,1200', image: section.settings.image -%}{%- endcapture -%}
           
            <video width="auto" 
            height="500px" 
            controls poster=
 "https://cdn.shopify.com/s/files/1/0006/7230/1119/files/Webp.net-resizeimage_138d70d0-a14c-465c-a56b-51d6364b6922.jpg?v=1651515384">
         <source src=
 "https://cdn.shopify.com/s/files/1/0006/7230/1119/files/Skin_Fitness_Music_Compressed.mp4?v=1651514617"
                 type="video/mp4">
     </video>
          </div>
        </div>
      
            <noscript>
              <img src="{{ section.settings.image | img_url: '800x' }}" alt="{{ section.settings.image.alt | escape }}">
            </noscript>
          </div>
        </div>
      {%- endif -%}

    {%- endcapture -%}
  
    <div class="FeatureText {% if section.settings.image != blank %}FeatureText--withImage FeatureText--image{{ section.settings.image_position | capitalize }}{% endif %}">
      {%- if section.settings.image_position == 'left' -%}
        {{- section_image -}}
        {{- section_content -}}
      {%- else -%}
        {{- section_content -}}
        {{- section_image -}}
      {%- endif -%}
    </div>
  </section>
  
  {% schema %}
  {
    "name": "Rich text with image",
    "class": "shopify-section--bordered",
    "settings": [
      {
        "type": "text",
        "id": "subheading",
        "label": "Sub-heading",
        "default": "Sub-heading"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Title"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image",
        "info": "1200 x 1200px .png recommended"
      },
      {
        "type": "select",
        "id": "image_position",
        "label": "Image position",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "right"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Text",
        "default": "<p>Add your own custom content to give more information about your store, availability details...</p>"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link text"
      },
      {
        "type": "url",
        "id": "link_url",
        "label": "Link URL"
      }
    ],
    "presets": [
      {
        "category": "Text",
        "name": "Rich text with image",
        "settings": {}
      }
    ]
  }
  {% endschema %}
  <style>
      #shopify-section-fitness-section3{
        background-color: #f0e6d0;
        
    }
    #shopify-section-fitness-section3 > section > div > div.FeatureText__ContentWrapper > div > header > h2 {
        font-family: 'Spring';
        color: #353670 !important;
        font-size: 4em;
    }
    #shopify-section-fitness-section3 > section > div > div.FeatureText__ContentWrapper > div > header > p {
      font-size: 1.5em;
    }
    @media screen and (max-width: 640px){ 
        #shopify-section-fitness-section3 > section > div > div.FeatureText__ImageWrapper > div > video {
            width: 300px;
        }
    }
    #shopify-section-fitness-section3 > section > div > div.FeatureText__ImageWrapper > div > video {
        text-align: center;
        margin-top: 50px;
        margin-bottom: 50px;
        
    }
    @media screen and (min-width: 641px){ 
   
    #shopify-section-fitness-section3 {
      padding-top: 10px;
    }
  }
    #shopify-section-fitness-section3 > section > div > div.FeatureText__ImageWrapper > div > video {
          text-align: center;
      }
     #fitness-btn2 {
    	border: 2px solid #353670;;
     	color: #353670;;
      justify-content: left;
    }
    #shopify-section-fitness-section3 > section > div > div.FeatureText__ContentWrapper > div > header > div {
    	justify-content: left;
    } 
  </style>