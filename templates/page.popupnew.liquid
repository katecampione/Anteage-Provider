<div class="Container">
  <header class="PageHeader">
    <div class="SectionHeader SectionHeader--center">
      <h1 class="SectionHeader__Heading Heading u-h1">{{ page.title }}</h1>
    </div>
  </header>

  <div class="PageContent PageContent--narrow Rte">
   
    <button id="myBtn">Open Modal</button>
    
  </div>
  <!-- The Modal -->
  <div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
      <div class="modal-content_text">
        <p class="modal-content-review">Please Review and Approve our Provider Agreement Before Continuing.</p>
      </div>
       <div class="PageContent PageContent--narrow Rte">
         	{{ page.content }}
  		</div>    
 		<div class="form-submit">
          <form method="POST" action=""  class="popup_form">
                <div class="Form__Item">
                  	{{ customer.email }}
                     <button id="submit" class="Button Button--primary" type="submit">
                       
                    	Accept Terms
                  	 </button>
                </div>
            </form>
      	</div>
    </div>

  </div>
</div>
<style>

  
/* The Modal (background) */
.modal {
  display: none; /* Hidden by default */
  position: fixed; /* Stay in place */
  z-index: 999; /* Sit on top */
  padding-top: 100px; /* Location of the box */
  left: 0;
  top: 0;
  width: 100%; /* Full width */
  height: 100%; /* Full height */
  overflow: auto; /* Enable scroll if needed */
  background-color: rgb(0,0,0); /* Fallback color */
  background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
}
 .Form__Item{
   text-align: center;
       padding: 20px;
